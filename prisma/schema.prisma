generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user")
}

model WeatherReport {
  id           Int            @id @default(autoincrement())
  date         String
  hour         Int
  temperature  Float?
  condition    String?
  document_url String?
  photos       WeatherPhoto[]
}

model WeatherPhoto {
  id        Int           @id @default(autoincrement())
  photo_url String
  reportId  Int
  report    WeatherReport @relation(fields: [reportId], references: [id])
}